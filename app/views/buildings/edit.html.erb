<div class="page-header">
  <h1>Edit Building #<%= @building.id %></h1>
</div>

<% if @building.errors.any? %>
  <% @building.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_building/<%= @building.id %>" class="form-horizontal">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @building.name %>">
    </div>
  </div>

  <!-- Label and input for address_id -->
  <div class="form-group">
    <label for="address_id" class="col-sm-2 control-label">
      Address
    </label>
    <div class="col-sm-10">
      <%= select_tag(:address_id, options_from_collection_for_select(Address.all, :id, :name, @building.address_id), :class => "form-control") %>    </div>
    </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @building.image_url %>">
    </div>
  </div>

  <!-- Label and input for headline -->
  <div class="form-group">
    <label for="headline" class="col-sm-2 control-label">
      Headline
    </label>
    <div class="col-sm-10">
      <textarea id="headline" name="headline" placeholder="Headline" class="form-control" rows="3"><%= @building.headline %></textarea>
    </div>
  </div>

  <!-- Label and input for created_at
  <div class="form-group">
    <label for="created_at" class="col-sm-2 control-label">
      Created at
    </label>
    <div class="col-sm-10">
      <input type="text" id="created_at" name="created_at" placeholder="Created at" class="form-control" value="<%= @building.created_at %>">
    </div>
  </div>

  <! Label and input for updated_at
  <div class="form-group">
    <label for="updated_at" class="col-sm-2 control-label">
      Updated at
    </label>
    <div class="col-sm-10">
      <input type="text" id="updated_at" name="updated_at" placeholder="Updated at" class="form-control" value="<%= @building.updated_at %>">
    </div>
  </div>-->

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Building" class="btn btn-primary">
    </div>
  </div>
</form>
