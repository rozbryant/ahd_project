<div class="page-header">
  <h1>Buildings</h1>
</div>

<p><a href="/buildings/new" class="btn btn-primary">Add a New Building</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Image url</th>
      <th>Headline</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address_id %></td>
        <td><%= building.image_url %></td>
        <td><%= building.headline %></td>
        <td><%= building.created_at %></td>
        <td><%= building.updated_at %></td>
        <td>
          <a href="/buildings/<%= building.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/buildings/<%= building.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_building/<%= building.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

