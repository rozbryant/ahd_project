<div class="page-header">
  <h1>Edit Favorite #<%= @favorite.id %></h1>
</div>

<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_favorite/<%= @favorite.id %>" class="form-horizontal">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @favorite.user_id %>">
    </div>
  </div>

  <!-- Label and input for building_id -->
  <div class="form-group">
    <label for="building_id" class="col-sm-2 control-label">
      Building
    </label>
    <div class="col-sm-10">
      <input type="text" id="building_id" name="building_id" placeholder="Building" class="form-control" value="<%= @favorite.building_id %>">
    </div>
  </div>

  <!-- Label and input for neighborhood_id -->
  <div class="form-group">
    <label for="neighborhood_id" class="col-sm-2 control-label">
      Neighborhood
    </label>
    <div class="col-sm-10">
      <input type="text" id="neighborhood_id" name="neighborhood_id" placeholder="Neighborhood" class="form-control" value="<%= @favorite.neighborhood_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Favorite" class="btn btn-primary">
    </div>
  </div>
</form>
