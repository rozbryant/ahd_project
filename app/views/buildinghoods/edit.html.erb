<div class="page-header">
  <h1>Edit Buildinghood #<%= @buildinghood.id %></h1>
</div>

<% if @buildinghood.errors.any? %>
  <% @buildinghood.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_buildinghood/<%= @buildinghood.id %>" class="form-horizontal">
  <!-- Label and input for building_id -->
  <div class="form-group">
    <label for="building_id" class="col-sm-2 control-label">
      Building
    </label>
    <div class="col-sm-10">
        <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @buildinghood.building_id), :class => "form-control") %>
    </div>
  </div>

  <!-- Label and input for neighborhood_id -->
  <div class="form-group">
    <label for="neighborhood_id" class="col-sm-2 control-label">
      Neighborhood
    </label>
    <div class="col-sm-10">
        <%= select_tag(:neighborhood_id, options_from_collection_for_select(Neighborhood.all, :id, :name, @buildinghood.building_id), :class => "form-control") %>
    </div>
  </div>

  <!-- Label and input for created_at -->
  <div class="form-group">
    <label for="created_at" class="col-sm-2 control-label">
      Created at
    </label>
    <div class="col-sm-10">
      <input type="text" id="created_at" name="created_at" placeholder="Created at" class="form-control" value="<%= @buildinghood.created_at %>">
    </div>
  </div>

  <!-- Label and input for updated_at -->
  <div class="form-group">
    <label for="updated_at" class="col-sm-2 control-label">
      Updated at
    </label>
    <div class="col-sm-10">
      <input type="text" id="updated_at" name="updated_at" placeholder="Updated at" class="form-control" value="<%= @buildinghood.updated_at %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Buildinghood" class="btn btn-primary">
    </div>
  </div>
</form>
