<div class="page-header">
  <h1>Add Building Attribute</h1>
</div>

<% if @building_attribute.errors.any? %>
  <% @building_attribute.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_building_attribute" class="form-horizontal">
  <!-- Label and input for building_id -->
  <div class="form-group">
    <label for="building_id" class="col-sm-2 control-label">
      Building
    </label>
    <div class="col-sm-10">
      <input type="text" id="building_id" name="building_id" placeholder="Building" class="form-control" value="<%= @building_attribute.building_id %>">
    </div>
  </div>

  <!-- Label and input for ownership -->
  <div class="form-group">
    <label for="ownership" class="col-sm-2 control-label">
      Ownership
    </label>
    <div class="col-sm-10">
      <input type="text" id="ownership" name="ownership" placeholder="Ownership" class="form-control" value="<%= @building_attribute.ownership %>">
    </div>
  </div>

  <!-- Label and input for unit_count -->
  <div class="form-group">
    <label for="unit_count" class="col-sm-2 control-label">
      Unit count
    </label>
    <div class="col-sm-10">
      <input type="text" id="unit_count" name="unit_count" placeholder="Unit count" class="form-control" value="<%= @building_attribute.unit_count %>">
    </div>
  </div>

  <!-- Label and input for stories -->
  <div class="form-group">
    <label for="stories" class="col-sm-2 control-label">
      Stories
    </label>
    <div class="col-sm-10">
      <input type="text" id="stories" name="stories" placeholder="Stories" class="form-control" value="<%= @building_attribute.stories %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @building_attribute.notes %></textarea>
    </div>
  </div>

  <!-- Label and input for created_at -->
  <div class="form-group">
    <label for="created_at" class="col-sm-2 control-label">
      Created at
    </label>
    <div class="col-sm-10">
      <input type="text" id="created_at" name="created_at" placeholder="Created at" class="form-control" value="<%= @building_attribute.created_at %>">
    </div>
  </div>

  <!-- Label and input for updated_at -->
  <div class="form-group">
    <label for="updated_at" class="col-sm-2 control-label">
      Updated at
    </label>
    <div class="col-sm-10">
      <input type="text" id="updated_at" name="updated_at" placeholder="Updated at" class="form-control" value="<%= @building_attribute.updated_at %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Building Attribute" class="btn btn-primary">
    </div>
  </div>
</form>
